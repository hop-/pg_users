<% if @user.errors.any? %>
<ul class="Signup_Errors">
<% for message_error in @user.errors.full_messages %>
  <li>* <%= message_error %></li>
<% end %>
</ul>
<% end %>
<h1>New User</h1>
<%= form_tag :action => :create do %>
    <%= render :partial => 'form' %>
    <%= submit_tag "Create" %>
<% end %>
<%= link_to 'List Users', :action => :list %>